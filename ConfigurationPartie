package MasterM;

public class ConfigurationPartie {
		protected boolean duplicationAutorise;
	    protected int nombreEssai;
	   // protected int longueurCode;
	    protected int nbCouleurs;
	    protected int nbPions;

	    
	    
public ConfigurationPartie(boolean duplicationAutorise, int nombreEssai, int longueurCode, int nbCouleurs,
				int nbPions) {
			super();
			this.duplicationAutorise = duplicationAutorise;
			this.nombreEssai = nombreEssai;
			//this.longueurCode = longueurCode;
			this.nbCouleurs = nbCouleurs;
			this.nbPions = nbPions;
		}



public ConfigurationPartie() {
	super();
}



public void easy() {
	 //longueurCode = 4;
     nbCouleurs = 6;
     nbPions = 4;
     nombreEssai = 12;
     duplicationAutorise = false;
}

public void medium() {
	 //longueurCode = 4;
    nbCouleurs = 6;
    nbPions = 4;
    nombreEssai = 10;
    duplicationAutorise = true;
}

public void hard() {
	 //longueurCode = 6;
    nbCouleurs = 8;
    nbPions = 6;
    nombreEssai = 12;
    duplicationAutorise = true;
}


public boolean isDuplicationAutorise() {
	return duplicationAutorise;
}



public void setDuplicationAutorise(boolean duplicationAutorise) {
	this.duplicationAutorise = duplicationAutorise;
}



public int getNombreEssai() {
	return nombreEssai;
}



public void setNombreEssai(int nombreEssai) {
	this.nombreEssai = nombreEssai;
}



/*public int getLongueurCode() {
	return longueurCode;
}



public void setLongueurCode(int longueurCode) {
	this.longueurCode = longueurCode;
} */



public int getNbCouleurs() {
	return nbCouleurs;
}



public void setNbCouleurs(int nbCouleurs) {
	this.nbCouleurs = nbCouleurs;
}



public int getNbPions() {
	return nbPions;
}



public void setNbPions(int nbPions) {
	this.nbPions = nbPions;
}







}
